<section class="ui segment">
  <div class="ui six small statistics">
    <div class="ui statistic">
      <div class="value">
        <i class="user icon"></i>
      </div>
      <div class="label">
        {{member.firstName}} {{member.lastName}}
      </div>
    </div>
    <div class="ui statistic">
      <div class="value">
        {{#if memberStats.isIdealBodyWeight}}
          <i class="green dashboard icon"></i>
        {{else}}
          <i class="red dashboard icon"></i>
        {{/if}}
      </div>
      <div class="label">
        Ideal Weight Indicator
      </div>
    </div>
    <div class="ui statistic">
      <div class="value">
        <i class="heartbeat icon"></i> {{memberStats.bmi}}
      </div>
      <div class="label">
        BMI
      </div>
    </div>
    <div class="ui statistic">
      <div class="value">
        <i class="doctor icon"></i>
      </div>
      <div class="label">
        {{memberStats.bmiCategory}}
      </div>
    </div>
    <div class="ui statistic">
      <div class="value">
        <i class="green flag checkered icon"></i> {{memberStats.goalsAchieved}}
      </div>
      <div class="label">
        GOALS ACHIEVED
      </div>
    </div>
    <div class="ui statistic">
      <div class="value">
        <i class="red flag checkered icon"></i> {{memberStats.goalsMissed}}
      </div>
      <div class="label">
        GOALS MISSED
      </div>
    </div>
  </div>
</section>